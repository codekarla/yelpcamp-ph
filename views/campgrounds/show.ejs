<%- layout('layouts/boilerplate') %>

<section class="row">
    <div class="card col-md-6 mb-5">
        <div class="card-body">
            <h1 class="card-title"><%= camp.name %></h1>
            <p class="card-text">&#8369;<%= camp.price %>/night</p>
          </div>

        <img src="<%= camp.image %>" class="card-img-top img-fluid" alt="Image of <%= camp.name %>">
        
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= camp.location %></li>
          <li class="list-group-item"><%= camp.description %></li>
        </ul>
        <div class="card-body">
            <a class="btn btn-success" href="/campgrounds/<%= camp.id %>/edit">Edit</a>
            <form class="d-inline" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><a href="/campgrounds">All Campgrounds</a></li>
        </ul>
    </div>

    <div class="col-md-6 p-5">
        <h3>Leave a Review</h2>
        <form action="/campgrounds/<%= camp._id %>/reviews" method="POST" class="mb-5 validate-form" novalidate>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating:</label>
                <input type="range" name="review[rating]" id="rating" class="form-range" min="1" max="5">
            </div>
            <div class="mb-3">
                <label for="review" class="form-label">Review</label>
                <textarea name="review[body]" id="body" cols="30" rows="3" class="form-control" required></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">
                    Please enter your review for <% camp.name %>.
                </div>
            </div>
            <button class="btn btn-success">Submit Review</button>
        </form>

        <!-- showing all reviews  -->        
        <% for (let review of camp.reviews) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title text-warning">
                            <%- "&starf;".repeat(review.rating) %>                      
                        </h5>
                        <form action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </div>
                    <p class="card-text">                        
                        <%= review.body %>
                    </p>
                </div>
            </div>
        <% } %>
    </div>
</section>
